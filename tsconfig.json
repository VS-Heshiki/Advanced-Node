{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "module": "commonjs",
        "rootDirs": [
            "src",
            "tests"
        ],
        "moduleResolution": "node",
        "baseUrl": "src",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "*"
            ],
            "@/tests/*": [
                "../tests/*"
            ]
        }
    },
    "include": [
        "src",
        "tests"
    ]
}
